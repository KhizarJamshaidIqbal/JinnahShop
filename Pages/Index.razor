@page "/"

<!DOCTYPE html>
<html>

<head>
    <title>Jinnah Shop</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="\css\CSS\index.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <!-- Banner -->
    <div class="banner">
        <i class="fa-regular fa-circle-left"></i>
        <img src="\images\banner1.png" alt="Banner1" class="hover-image" />
        <i class="fa-regular fa-circle-right"></i>
    </div>
    <!-- grid-iteam-1 -->
    <div class="grid-iteam-1 inline-flex w-full px-1 py-1 relative">
        <img class="w-1/4" src="\images\b1.png" alt="fragrance1" style=" max-height: 100%; padding-right: 5px;">
        <img class="w-1/4" src="\images\b2.png" alt="fragrance2" style=" max-height: 100%; padding-right: 5px;">
        <img class="md:w-2/4" src="\images\b3.png" alt="fragrance2" style="max-height: 100%; padding-right: 5px">
        <p class="view1 absolute top-300 left-150">View Now</p>
        <p class="view2">View Now</p>
        <p class="view3">View Now</p>
    </div>
    <!-- bestseller -->
    <div class="bestseller">
        <P>Best seller products</P>
    </div>
    <!-- bestseller-view -->
    <div class="bestseller-view">
        <ul>
            <li style="text-decoration: underline; font-size: 15; font-weight: 500px; color: red;">Perfume</li>
            <li>Watchs</li>
            <li>Lipstick</li>
        </ul>
    </div>
    <!-- bestseller-view-list -->
    <div style="height: 460; width: 100%;">
        <div class="bestseller-view-list inline-flex w-full px-1 py-1 relative grid grid-cols-4">
            <img src="\images\bs1.png">
            <img src="\images\bs1.png">
            <img src="\images\bs1.png">
            <img src="\images\bs1.png">
        </div>
    </div>
    <!-- small-banner2 -->
    <div class="small-banner2 inline-flex justify-around w-full">
        <img src="\images\s1.png">
        <img src="\images\s2.png">
    </div>
</body>

</html>
